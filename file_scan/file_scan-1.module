	$mime = 'txt,png,jpg,doc,docx';	
	$node = node_submit($node); // Prepare node for saving
	node_save($node);
	manage_node_entry($node->nid,$filename,$ComisionDate,$aagentid,$content_type,'0');
	
	return $node->nid;
}


